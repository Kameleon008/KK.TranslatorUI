{
  "theme": "dark-theme",
  "closeOnBlur": true,
  "translationStrategy": "ollamaTranslate",
  "translationStrategyOptions": {
    "sourceLanguage": "auto",
    "targetLanguage": "PL",
    "ollamaTranslate": {
      "model": "gemma3",
      "apiUrl": "http://localhost:11434/api/generate"
    },
    "libraTranslate": {
      "apiUrl": "http://localhost:5000/translate"
    }
  },
  "mainWindow": {
    "skipTaskbar": false,
    "frame": false,
    "resizable": true,
    "transparent": true,
    "backgroundMaterial": "acrylic",
    "alwaysOnTop": false
  }
}